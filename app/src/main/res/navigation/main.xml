<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    app:startDestination="@id/timeSlotListFragment">

    <fragment
        android:id="@+id/timeSlotDetailsFragment"
        android:name="it.polito.madg34.timebanking.TimeSlotDetailsFragment"
        android:label="@string/app_name" >
        <action
            android:id="@+id/action_timeSlotDetailsFragment_to_timeSlotEditFragment"
            app:destination="@id/timeSlotEditFragment"
            app:enterAnim="@anim/slide_in"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"/>
        <action
            android:id="@+id/action_timeSlotDetailsFragment_to_timeSlotListFragment"
            app:destination="@id/timeSlotListFragment"
            app:enterAnim="@anim/slide_in"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"/>
    </fragment>
    <fragment
        android:id="@+id/timeSlotEditFragment"
        android:name="it.polito.madg34.timebanking.TimeSlotEditFragment"
        android:label="@string/app_name" >
        <action
            android:id="@+id/action_timeSlotEditFragment_to_timeSlotDetailsFragment2"
            app:destination="@id/timeSlotDetailsFragment"
            app:enterAnim="@anim/slide_in"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"/>
        <action
            android:id="@+id/action_timeSlotEditFragment_to_timeSlotListFragment"
            app:destination="@id/timeSlotListFragment"
            app:enterAnim="@anim/slide_in"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"/>
    </fragment>
    <fragment
        android:id="@+id/timeSlotListFragment"
        android:name="it.polito.madg34.timebanking.TimeSlotListFragment"
        android:label="@string/app_name" >
        <action
            android:id="@+id/action_timeSlotListFragment_to_timeSlotDetailsFragment2"
            app:destination="@id/timeSlotDetailsFragment"
            app:enterAnim="@anim/slide_in"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"/>
        <action
            android:id="@+id/action_timeSlotListFragment_to_timeSlotEditFragment2"
            app:destination="@id/timeSlotEditFragment"
            app:enterAnim="@anim/slide_in"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"/>
        <action
            android:id="@+id/action_timeSlotListFragment_to_showProfileFragment"
            app:destination="@id/showProfileFragment"
            app:enterAnim="@anim/slide_in"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"/>
        <action
            android:id="@+id/action_timeSlotListFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/showProfileFragment"
        android:name="it.polito.madg34.timebanking.ShowProfileFragment"
        android:label="@string/app_name" >
        <action
            android:id="@+id/action_showProfileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment"
            app:enterAnim="@anim/slide_in"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"/>
        <action
            android:id="@+id/action_showProfileFragment_to_timeSlotListFragment"
            app:destination="@id/timeSlotListFragment"
            app:enterAnim="@anim/slide_in"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"/>
    </fragment>
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="it.polito.madg34.timebanking.EditProfileFragment"
        android:label="@string/app_name" >
        <action
            android:id="@+id/action_editProfileFragment_to_addSkillFragment"
            app:destination="@id/addSkillFragment"
            app:enterAnim="@anim/slide_in"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"/>
        <action
            android:id="@+id/action_editProfileFragment_to_editSkillFragment"
            app:destination="@id/editSkillFragment"
            app:enterAnim="@anim/slide_in"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out"/>
        <action
            android:id="@+id/action_editProfileFragment_to_showProfileFragment"
            app:destination="@id/showProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/addSkillFragment"
        android:name="it.polito.madg34.timebanking.AddSkillFragment"
        android:label="@string/app_name" />
    <fragment
        android:id="@+id/editSkillFragment"
        android:name="it.polito.madg34.timebanking.EditSkillFragment"
        android:label="@string/app_name" />
</navigation>